<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".unit_4.SQLiteDatabaseExample">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/EtId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:inputType="number"
            android:textSize="20sp"
            android:hint="Enter Id" />

        <EditText
            android:id="@+id/EtName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:inputType="textPersonName"
            android:textSize="20sp"
            android:hint="Enter Name" />

        <EditText
            android:id="@+id/EtAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="20dp"
            android:inputType="number"
            android:textSize="20sp"
            android:hint="Enter Age" />

        <EditText
            android:id="@+id/EtSalary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="20dp"
            android:inputType="number"
            android:textSize="20sp"
            android:hint="Enter Salary" />

        <Button
            android:id="@+id/submitData"
            android:layout_gravity="center"
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Data" />

        <Button
            android:id="@+id/retrieveData"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fetch Data" />

        <Button
            android:id="@+id/updateData"
            android:layout_gravity="center"
            android:layout_marginBottom="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update Data" />

        <Button
            android:id="@+id/deleteData"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete Data" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="horizontal">

            <TextView
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:id="@+id/displayId"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Id\n\n" />

            <TextView
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:id="@+id/displayName"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Name\n\n" />

            <TextView
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:id="@+id/displayAge"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Age\n\n" />

            <TextView
                android:layout_gravity="center"
                android:layout_margin="10dp"
                android:id="@+id/displaySalary"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="Salary\n\n" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>